<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#e8f5e9">

    <!-- Champ de saisie pour entrer un nombre -->
    <EditText
        android:id="@+id/champNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Saisir un nombre"
        android:inputType="number"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@android:drawable/edit_text" />

    <!-- Bouton pour convertir le nombre en texte -->
    <Button
        android:id="@+id/boutonConvertir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Convertir"
        android:background="#4CAF50"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Résultat en français -->
    <TextView
        android:id="@+id/resultatFrancais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Résultat en français :"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="#ffffff"
        android:gravity="center" />

    <!-- Résultat en anglais -->
    <TextView
        android:id="@+id/resultatAnglais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"
        android:padding="12dp"
        android:text="Résultat en anglais :"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="Application de traduction" />
</LinearLayout>
